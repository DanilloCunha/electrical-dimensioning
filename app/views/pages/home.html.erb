<div class="container mx-auto my-8">
  <h1 class="text-2xl font-bold mb-4">Dimensionamento Elétrico</h1>

  <%= form_tag do %>
    <div class="mb-4">
      <%= label_tag :voltage, 'Tensão (V)' %>
      <%= select_tag :voltage, options_for_select([127, 220]), class: 'form-control' %>
    </div>

    <div class="mb-4">
      <%= label_tag :power, 'Potência (W)' %>
      <%= number_field_tag :power, nil, class: 'form-control' %>
    </div>

    <div class="mb-4">
      <%= label_tag :distance, 'Distância (m)' %>
      <%= number_field_tag :distance, nil, class: 'form-control' %>
    </div>

    <div class="mb-4">
      <%= label_tag :circuit_type, 'Tipo de Circuito' %>
      <%= select_tag :circuit_type, options_for_select(['Iluminação', 'Tomada', 'Chuveiro', 'Ar-Condicionado']), class: 'form-control' %>
    </div>

    <div class="container mx-auto mt-8 p-4 bg-white rounded shadow">
      <h2 class="text-xl font-bold mb-4">Preencha os Dados</h2>
      <%= form_with url: root_path, method: :get, local: true, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :voltage, "Tensão (Volts)", class: "block font-medium" %>
          <%= f.number_field :voltage, value: @voltage, class: "w-full border rounded px-2 py-1" %>
        </div>
        <div>
          <%= f.label :power, "Potência (Watts)", class: "block font-medium" %>
          <%= f.number_field :power, value: @power, class: "w-full border rounded px-2 py-1" %>
        </div>
        <div>
          <%= f.label :distance, "Distância (Metros)", class: "block font-medium" %>
          <%= f.number_field :distance, value: @distance, class: "w-full border rounded px-2 py-1" %>
        </div>
        <div>
          <%= f.label :circuit_type, "Tipo de Circuito", class: "block font-medium" %>
          <%= f.select :circuit_type, [["Monofásico", "monofasico"], ["Bifásico", "bifasico"], ["Trifásico", "trifasico"]], {}, class: "w-full border rounded px-2 py-1" %>
        </div>
        <div>
          <%= f.submit "Calcular", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
        </div>
      <% end %>
    </div>


